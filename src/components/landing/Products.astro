---
import { Image } from 'astro:assets';
import { getCollection} from 'astro:content';

const tools = await getCollection('tools');

---

<main class="bg-gray-900">
  <div class="relative mx-auto px-8 max-w-7xl py-12 md:px-12">
    <div class="grid grid-cols-1 gap-6 lg:gap-y-32 md:grid-cols-2 lg:grid-cols-3">
      {tools.map((tool) => {
        return (
        <figure>
          <Image
            class="w-full rounded-3xl shadow-2xl object-cover aspect-[4/3]"
            src={tool.data.image}
            alt={tool.data.name}
            width={400}
            height={300}
          />
          <div class="mt-4 flex justify-between px-6">
            <div>
              <h3 class="text-sm text-negroni-500">
                <a href={`/tools/${tool.id}`}>
                  <span aria-hidden="true" class="absolute inset-0"></span>
                  {tool.data.name}
                </a>
              </h3>
              <p class="mt-1 text-lg font-medium leading-6 text-white">
                {tool.data.description}
              </p>
              <p class="mt-2 text-sm text-gray-400">
                Manufacturer: {tool.data.manufacturer}
              </p>
              <p class="mt-1 text-sm text-gray-400">
                Model: {tool.data.model}
              </p>
               <p class="mt-1 text-sm text-gray-400">
                Battery: {tool.data.batteryType}
              </p>
            </div>
            <p class="text-base text-tomato-500">
              Daily: ${tool.data.price.daily}
            </p>
            <p class="text-base text-tomato-500">
              Weekly: ${tool.data.price.weekly}
            </p>
          </div>
        </figure>
        )
      })}
    </div>
  </div>
</main>
